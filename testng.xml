<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Hybrid Framework Suite" parallel="tests" thread-count="2">
    <!-- 2 threads: one thread will run the UI Tests test block, the other will run API Tests -->
    <test name="UI Tests">
        <classes>
            <class name="com.selenium.tests.LoginTest"/>
<!--            <class name="com.selenium.tests.GoogleTest"/>-->
        </classes>
    </test>

    <test name="API Tests">
        <classes>
            <class name="com.selenium.api.tests.PostsApiTest"/>
        </classes>
    </test>
</suite>